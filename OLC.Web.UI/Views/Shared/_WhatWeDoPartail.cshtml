<script src="~/js/jquery/jquery.min.js"></script>
<script>
    // Add interactivity to How It Works section
    document.addEventListener('DOMContentLoaded', function() {
        // Video Modal Functionality
        const videoModal = document.getElementById('videoModal');
        const videoPlayer = document.getElementById('videoPlayer');
        const videoPlayBtns = document.querySelectorAll('.video-play-btn');

        videoModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            const videoSrc = button.getAttribute('data-video-src') + '?autoplay=1&rel=0';
            videoPlayer.src = videoSrc;
        });

        videoModal.addEventListener('hidden.bs.modal', function() {
            videoPlayer.src = '';
        });

        // Add click animation to video play button
        videoPlayBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const playButton = this.querySelector('.play-button-circle');
                playButton.style.transform = 'scale(0.9)';
                setTimeout(() => {
                    playButton.style.transform = 'scale(1)';
                }, 150);
            });
        });

        // Animate process steps on scroll
        const processSteps = document.querySelectorAll('.process-step');
        const observer = new IntersectionObserver(function(entries) {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';

                        // Animate step icon
                        const icon = entry.target.querySelector('.step-icon');
                        icon.style.animation = 'bounceIn 0.6s ease';

                        setTimeout(() => {
                            icon.style.animation = '';
                        }, 600);
                    }, index * 200);
                }
            });
        }, {
            threshold: 0.2,
            rootMargin: '0px 0px -50px 0px'
        });

        processSteps.forEach(step => {
            step.style.opacity = '0';
            step.style.transform = 'translateY(20px)';
            step.style.transition = 'all 0.6s ease';
            observer.observe(step);
        });

        // Add hover effects to quick steps
        const stepCards = document.querySelectorAll('.quick-steps .step-card');
        stepCards.forEach((card, index) => {
            card.addEventListener('mouseenter', function() {
                const number = this.querySelector('.step-number');
                number.style.transform = 'scale(1.2) rotate(10deg)';
                number.style.transition = 'all 0.3s ease';
            });

            card.addEventListener('mouseleave', function() {
                const number = this.querySelector('.step-number');
                number.style.transform = 'scale(1) rotate(0deg)';
            });
        });

        // Animate benefit cards
        const benefitCards = document.querySelectorAll('.benefit-card');
        benefitCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                const icon = this.querySelector('.benefit-icon');
                icon.style.transform = 'scale(1.1) rotate(5deg)';
            });

            card.addEventListener('mouseleave', function() {
                const icon = this.querySelector('.benefit-icon');
                icon.style.transform = 'scale(1) rotate(0deg)';
            });
        });

        // Add counting animation to trust indicators
        const trustValues = document.querySelectorAll('.trust-item h4');
        const trustObserver = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    trustValues.forEach(value => {
                        if (value.textContent.includes('K+') || value.textContent.includes('Cr+')) {
                            value.style.animation = 'countUp 1s ease';
                            setTimeout(() => {
                                value.style.animation = '';
                            }, 1000);
                        }
                    });
                }
            });
        }, { threshold: 0.5 });

        trustObserver.observe(document.querySelector('.trust-indicators'));

        // Add parallax effect to background elements
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            const videoCard = document.querySelector('.video-card');

            if (videoCard) {
                const yPos = -(scrolled * 0.1);
                videoCard.style.transform = `translateY(${yPos}px)`;
            }

            // Animate floating dots
            const dots = document.querySelectorAll('.floating-dots .dot');
            dots.forEach((dot, index) => {
                const speed = 0.3 + (index * 0.1);
                const yPos = -(scrolled * speed * 0.05);
                dot.style.transform = `translateY(${yPos}px)`;
            });
        });

        // Add CSS for animations
        const style = document.createElement('style');
        style.textContent = `
            keyframes bounceIn {
                0% {
                    transform: scale(0.3);
                    opacity: 0;
                }
                50% {
                    transform: scale(1.1);
                }
                100% {
                    transform: scale(1);
                    opacity: 1;
                }
            }

            keyframes countUp {
                0% {
                    transform: scale(0.8);
                    opacity: 0;
                }
                100% {
                    transform: scale(1);
                    opacity: 1;
                }
            }

            .process-step .step-icon {
                animation: bounceIn 0.6s ease;
            }

            .trust-item h4 {
                transition: all 0.3s ease;
            }
        `;
        document.head.appendChild(style);

        // Auto-animate quick steps (optional)
        let currentStep = 0;
        function animateSteps() {
            stepCards.forEach(card => card.classList.remove('active'));

            stepCards[currentStep].classList.add('active');
            stepCards[currentStep].style.background = 'var(--bs-primary)';
            stepCards[currentStep].style.color = 'white';

            currentStep = (currentStep + 1) % stepCards.length;

            setTimeout(() => {
                stepCards.forEach(card => {
                    if (!card.classList.contains('active')) {
                        card.style.background = 'white';
                        card.style.color = 'inherit';
                    }
                });
            }, 500);
        }

        // Start animation loop
        // setInterval(animateSteps, 2000);
    });
</script>