<!-- KYC Rejected Status Modal -->
<div class="modal fade" id="kycRejectedModal" tabindex="-1" aria-labelledby="kycRejectedModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title" id="kycRejectedModalLabel">KYC Verification Rejected</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">X</button>
            </div>
            <div class="modal-body text-center px-4 pb-4 pt-0">

                <!-- Status Icon -->
                <div class="kyc-modal-icon mb-3">
                    <i class="fas fa-times-circle fa-3x text-danger"></i>
                </div>

                <!-- Message -->
                <h5 class="text-danger mb-3">KYC Verification Failed</h5>
                <p class="text-muted mb-4">
                    Unfortunately, your KYC documents did not meet our verification requirements.
                    Please review the rejection reason below and submit a new request.
                </p>

                <!-- Rejection Reason -->
                <div class="alert alert-danger mb-4">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-exclamation-circle me-2 mt-1"></i>
                        <div class="text-start">
                            <strong>Rejection Reason:</strong>
                            <div id="rejectionReasonText" class="mt-1"></div>
                        </div>
                    </div>
                </div>

                <!-- Restrictions Notice -->
                <div class="alert alert-warning mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-ban me-2"></i>
                        <span>
                            <strong>Payment Restrictions:</strong> You will not be able to make payments until your KYC verification is successfully completed.
                        </span>
                    </div>
                </div>

                <!-- Next Steps -->
                <div class="card bg-light mb-4">
                    <div class="card-body text-start">
                        <h6 class="card-title">What to do next?</h6>
                        <ul class="small mb-0 ps-3">
                            <li>Review the rejection reason above</li>
                            <li>Go to Service Request section to create a new KYC request</li>
                            <li>Ensure all documents are clear, valid, and meet our requirements</li>
                            <li>Submit the new request for verification</li>
                        </ul>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-grid gap-2 d-md-flex justify-content-center">
                    <button type="button" class="btn btn-primary px-4" id="goToServiceRequestBtn">
                        <i class="fas fa-ticket-alt me-2"></i>Create Service Request
                    </button>
                    <button type="button" class="btn btn-outline-secondary px-4" id="contactSupportBtnRejected">
                        <i class="fas fa-headset me-2"></i>Contact Support
                    </button>
                </div>

                <!-- Additional Info -->
                <div class="mt-4">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Need help? Contact our support team for assistance with your KYC submission
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        // Check if KYC status is "REJECTED" and show modal
        var _appUserInfo = storageService.get('ApplicationUser');

        if (_appUserInfo && _appUserInfo.KycStatus === 'Rejected' && !sessionStorage.getItem('kycRejectedModalShown')) {
            // Show modal after a short delay
            setTimeout(function () {
                // If we have a rejection reason from the server, display it
                if (_appUserInfo.KycRejectionReason) {
                    $('#rejectionReasonText').text(_appUserInfo.KycRejectionReason);
                } else {
                    $('#rejectionReasonText').text('Documents did not meet verification standards. Please ensure all documents are clear, valid, and up-to-date.');
                }

                $('#kycRejectedModal').modal({ backdrop: 'static', keyboard: false });
                $('#kycRejectedModal').modal('show');
            }, 1000);

            // Set flag when modal is closed
            $('#kycRejectedModal').on('hidden.bs.modal', function () {
                sessionStorage.setItem('kycRejectedModalShown', 'true');
            });

            $('.btn-close').on('click', function () {
                sessionStorage.setItem('kycRejectedModalShown', 'true');
                $('#kycRejectedModal').modal('hide');
            });
        }

        // Go to Service Request button handler
        $('#goToServiceRequestBtn').on('click', function () {
            // Redirect to service request page to create new KYC request
            window.location.href = '/ServiceRequest/Create?type=KYC_RESUBMISSION';
        });

        // Contact Support button handler
        $('#contactSupportBtnRejected').on('click', function () {
            // Redirect to support page
            window.location.href = '/Support/Contact';
        });
    });
</script>