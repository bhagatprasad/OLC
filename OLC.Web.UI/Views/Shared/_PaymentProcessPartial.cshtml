<!-- Payment Process - Enhanced -->
<section class="section bg-gradient-light">
    <div class="container">
        <!-- Section Header -->
        <div class="row justify-content-center mb-6">
            <div class="col-lg-8 text-center">
                <div class="section-badge">
                    <span class="badge badge-pill badge-primary-soft px-4 py-2 mb-3">
                        <i class="fas fa-bolt me-2"></i>3-Step Process
                    </span>
                </div>
                <h2 class="display-4 fw-bold mb-3">
                    How <span class="text-gradient-primary">Betalen</span> Works
                </h2>
                <p class="lead text-muted mb-0">
                    From invoice to bank transfer in minutes. Our streamlined process makes money movement effortless.
                </p>
            </div>
        </div>

        <!-- Process Steps -->
        <div class="row g-4 position-relative">
            <!-- Connecting Lines -->
            <div class="process-connector d-none d-lg-block">
                <div class="connector-line"></div>
                <div class="connector-dots">
                    <span class="dot dot-1"></span>
                    <span class="dot dot-2"></span>
                    <span class="dot dot-3"></span>
                </div>
            </div>

            <!-- Step 1 -->
            <div class="col-lg-4 col-md-6">
                <div class="process-step-card card border-0 shadow-lg hover-lift">
                    <div class="card-body p-5 text-center">
                        <div class="step-number-wrapper mb-4">
                            <div class="step-number-circle bg-primary-gradient text-white">
                                <span class="step-number">1</span>
                                <div class="step-pulse"></div>
                            </div>
                        </div>
                        <div class="step-icon-wrapper mb-4">
                            <div class="step-icon-circle bg-primary-soft text-primary">
                                <i class="fas fa-file-invoice fa-2x"></i>
                            </div>
                        </div>
                        <h3 class="h2 fw-bold mb-3">Create & Send Invoice</h3>
                        <p class="text-muted mb-4">
                            Generate professional invoices with Betalen Dashboard. Add your bank details and send
                            to recipients via email, WhatsApp, or direct link.
                        </p>
                        <div class="step-features">
                            <ul class="list-unstyled text-start mb-4">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span class="text-muted">Customizable invoice templates</span>
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span class="text-muted">Automated payment reminders</span>
                                </li>
                                <li>
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span class="text-muted">GST compliant invoices</span>
                                </li>
                            </ul>
                        </div>
                        <a href="#" class="btn btn-sm btn-outline-primary rounded-pill px-4">
                            Try Demo <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                    <div class="step-footer text-center pb-4">
                        <div class="step-time-badge">
                            <span class="badge bg-light text-dark">
                                <i class="fas fa-clock me-1"></i> 30 seconds
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="col-lg-4 col-md-6">
                <div class="process-step-card card border-0 shadow-lg hover-lift">
                    <div class="card-body p-5 text-center">
                        <div class="step-number-wrapper mb-4">
                            <div class="step-number-circle bg-warning-gradient text-white">
                                <span class="step-number">2</span>
                                <div class="step-pulse"></div>
                            </div>
                        </div>
                        <div class="step-icon-wrapper mb-4">
                            <div class="step-icon-circle bg-warning-soft text-warning">
                                <i class="fas fa-credit-card fa-2x"></i>
                            </div>
                        </div>
                        <h3 class="h2 fw-bold mb-3">Secure Payment Processing</h3>
                        <p class="text-muted mb-4">
                            Recipient pays via Credit/Debit Card, UPI, or Net Banking with 3D Secure authentication.
                            Real-time payment tracking with instant notifications.
                        </p>
                        <div class="step-features">
                            <ul class="list-unstyled text-start mb-4">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span class="text-muted">Multiple payment options</span>
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span class="text-muted">Instant payment confirmation</span>
                                </li>
                                <li>
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span class="text-muted">Auto currency conversion</span>
                                </li>
                            </ul>
                        </div>
                        <div class="payment-methods mb-4">
                            <div class="d-flex justify-content-center gap-3">
                                <span class="payment-method-icon">
                                    <i class="fab fa-cc-visa fa-2x text-primary"></i>
                                </span>
                                <span class="payment-method-icon">
                                    <i class="fab fa-cc-mastercard fa-2x text-danger"></i>
                                </span>
                                <span class="payment-method-icon">
                                    <i class="fas fa-rupee-sign fa-2x text-success"></i>
                                </span>
                                <span class="payment-method-icon">
                                    <i class="fab fa-google-pay fa-2x text-info"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="step-footer text-center pb-4">
                        <div class="step-time-badge">
                            <span class="badge bg-light text-dark">
                                <i class="fas fa-clock me-1"></i> Instant
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Step 3 -->
            <div class="col-lg-4 col-md-6 mx-auto">
                <div class="process-step-card card border-0 shadow-lg hover-lift">
                    <div class="card-body p-5 text-center">
                        <div class="step-number-wrapper mb-4">
                            <div class="step-number-circle bg-success-gradient text-white">
                                <span class="step-number">3</span>
                                <div class="step-pulse"></div>
                            </div>
                        </div>
                        <div class="step-icon-wrapper mb-4">
                            <div class="step-icon-circle bg-success-soft text-success">
                                <i class="fas fa-university fa-2x"></i>
                            </div>
                        </div>
                        <h3 class="h2 fw-bold mb-3">Instant Bank Settlement</h3>
                        <p class="text-muted mb-4">
                            Funds transferred directly to your bank account. Choose settlement frequency:
                            Instant (T+0), Next Day (T+1), or Weekly (T+7) as per your preference.
                        </p>
                        <div class="step-features">
                            <ul class="list-unstyled text-start mb-4">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span class="text-muted">Direct NEFT/RTGS/IMPS</span>
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span class="text-muted">Automated reconciliation</span>
                                </li>
                                <li>
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <span class="text-muted">Real-time settlement reports</span>
                                </li>
                            </ul>
                        </div>
                        <div class="settlement-options">
                            <div class="d-flex justify-content-center gap-2">
                                <span class="badge bg-primary">T+0</span>
                                <span class="badge bg-warning">T+1</span>
                                <span class="badge bg-success">T+7</span>
                            </div>
                        </div>
                    </div>
                    <div class="step-footer text-center pb-4">
                        <div class="step-time-badge">
                            <span class="badge bg-light text-dark">
                                <i class="fas fa-clock me-1"></i> 2-24 hours
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Security Badge -->
        <div class="row mt-6">
            <div class="col-lg-8 mx-auto">
                <div class="security-card card border-0 bg-gradient-dark text-white shadow-lg">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-2 text-center mb-3 mb-md-0">
                                <div class="security-icon">
                                    <i class="fas fa-shield-alt fa-3x text-warning"></i>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h4 class="fw-bold mb-2">Bank-Grade Security & Privacy</h4>
                                <p class="mb-0 opacity-75">
                                    PCI DSS Level 1 compliant, 256-bit encryption, and strict data privacy.
                                    Your information is never shared with third parties.
                                </p>
                            </div>
                            <div class="col-md-2 text-center mt-3 mt-md-0">
                                <div class="trust-badges">
                                    <span class="badge bg-success mb-2">RBI Approved</span>
                                    <span class="badge bg-info">ISO 27001</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA -->
        <div class="row mt-6">
            <div class="col-lg-10 mx-auto">
                <div class="cta-box text-center bg-primary-soft rounded-3 p-5">
                    <h3 class="display-6 fw-bold mb-3">Ready to Streamline Your Payments?</h3>
                    <p class="lead mb-4">
                        Join 50,000+ businesses who trust Betalen for secure, instant money transfers.
                    </p>
                    <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
                        <a href="@Url.Action("SignUp", "Account")" class="btn btn-primary btn-lg px-5 py-3">
                            <i class="fas fa-rocket me-2"></i>Start Free Trial
                        </a>
                        <a href="@Url.Action("Demo", "Home")" class="btn btn-outline-primary btn-lg px-5 py-3">
                            <i class="fas fa-play-circle me-2"></i>Book a Demo
                        </a>
                    </div>
                    <p class="text-muted mt-3 mb-0">
                        <i class="fas fa-check-circle text-success me-1"></i> No setup fees
                        <i class="fas fa-check-circle text-success mx-3"></i> First 3 transfers free
                        <i class="fas fa-check-circle text-success mx-3"></i> 24/7 support
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
