@{
    ViewData["Title"] = "Redeem Rewards - Withdraw funds from your wallet";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container-fluid">
    <!-- Page Header with Button -->
    <div class="card">
        <div class="card-header">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3">
                    <div>
                        <h1 class="h3 fw-bold text-primary">Redeem Rewards</h1>
                        <p class="text-muted mb-0">Withdraw funds from your wallet to your bank account.</p>
                    </div>
                    <div>
                        <a class="btn btn-primary" href="@Url.Action("Index", "UserBoard", null)">
                            <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="card" style="width:100% !important;">
                <div class="form">
                    <div class="left-side">
                        <div class="left-heading">
                            <h3>Withdrawal Wizard</h3>
                        </div>
                        <div class="steps-content">
                            <h3>Step <span class="step-number">1</span></h3>
                            <p class="step-number-content active">Enter the amount you want to withdraw from your wallet.</p>
                            <p class="step-number-content d-none">Select your bank account to receive the funds.</p>
                            <p class="step-number-content d-none">Provide your billing address for verification.</p>
                            <p class="step-number-content d-none">Review all details before confirming withdrawal.</p>
                        </div>
                        <ul class="progress-bar">
                            <li class="active">Withdrawal Amount</li>
                            <li>Bank Account</li>
                            <li>Billing Address</li>
                            <li>Confirmation</li>
                        </ul>
                    </div>
                    <div class="right-side">
                        <!-- Step 1: Withdrawal Amount -->
                        <div class="main active">
                            <small><i class="fas fa-wallet"></i></small>
                            <div class="text">
                                <h2>Withdrawal Amount</h2>
                                <p>How much would you like to withdraw from your wallet?</p>
                            </div>

                            <!-- Wallet Balance Display -->
                            <div id="walletBalanceContainer"></div>

                            <div class="input-text">
                                <div class="input-div">
                                    <input type="number" required placeholder=" " id="withdrawal_amount" step="0.01" min="0.01" max="1000000">
                                    <span>Withdrawal Amount ($)</span>
                                </div>
                                <div id="amount-error" class="text-danger mt-2" style="display: none;">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    <span id="error-message"></span>
                                </div>
                            </div>

                            <div class="input-text">
                                <div class="input-div">
                                    <select class="form-control form-select" id="PaymentReason" required>
                                        <option value="" disabled selected>Select reason</option>
                                    </select>
                                    <span>Withdrawal Reason</span>
                                </div>
                            </div>

                            <div class="input-text">
                                <div class="input-div">
                                    <select class="form-control form-select" id="TransactionFee" required>
                                        <option value="" disabled selected>Select fee</option>
                                    </select>
                                    <span>Transaction Fee</span>
                                </div>
                            </div>

                            <div class="input-text">
                                <div class="input-div">
                                    <select class="form-control form-select" id="FeeCollectionMethod" required>
                                        <option value="Withdraw">Withdraw</option>
                                    </select>
                                    <span>Fee Collection Method</span>
                                </div>
                            </div>

                            <div class="buttons">
                                <button class="next_button" id="nextStepButton">Next Step</button>
                            </div>
                        </div>

                        <!-- Step 2: Bank Account -->
                        <div class="main">
                            <small><i class="fa fa-university"></i></small>
                            <div class="text">
                                <h2>Select Bank Account</h2>
                                <p>Choose the account where you want to receive funds.</p>
                            </div>

                            <div id="bankAccountsContainer"></div>

                            <div class="buttons button_space">
                                <button class="back_button">Back</button>
                                <button class="next_button">Next Step</button>
                            </div>
                        </div>

                        <!-- Step 3: Billing Address -->
                        <div class="main">
                            <small><i class="fa fa-home"></i></small>
                            <div class="text">
                                <h2>Billing Address</h2>
                                <p>Enter your billing address for verification purposes.</p>
                            </div>

                            <div id="billingAddressesContainer"></div>

                            <div class="buttons button_space">
                                <button class="back_button">Back</button>
                                <button class="next_button">Next Step</button>
                            </div>
                        </div>

                        <!-- Step 4: Confirmation -->
                        <div class="main">
                            <small><i class="fa fa-check-circle"></i></small>
                            <div class="text">
                                <h2>Confirm Withdrawal</h2>
                                <p>Review all details before completing your withdrawal.</p>
                            </div>

                            <div class="summary-item" id="bankAccountSummary">
                                <h5>Bank Account</h5>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-university payment-icon"></i>
                                    <div>
                                        <p class="mb-0 fw-bold">Please select a bank account</p>
                                        <p class="mb-0 text-muted">No account selected</p>
                                    </div>
                                </div>
                            </div>

                            <div class="summary-item" id="billingAddressSummary">
                                <h5>Billing Address</h5>
                                <div>
                                    <p class="mb-0 fw-bold">Please select a billing address</p>
                                    <p class="mb-0 text-muted">No address selected</p>
                                </div>
                            </div>

                            <div class="summary-item">
                                <h5>Withdrawal Details</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Withdrawal Amount:</span>
                                    <span class="fw-bold" id="usrTransferAmount">$0.00</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Processing Fee (%):</span>
                                    <span id="usrProcessingFee">0.00%</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Platform Fee:</span>
                                    <span id="usrPlotformCharges">$0.00</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <span class="fw-bold">Fee collection:</span>
                                    <span class="fw-bold text-primary" id="usrFeeCollection">deducted</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="fw-bold">You will receive:</span>
                                    <span class="fw-bold text-success" id="usrUserReceves">$0.00</span>
                                </div>
                                <div class="d-flex justify-content-between mt-2 pt-2 border-top">
                                    <span class="fw-bold fs-5">Total Amount:</span>
                                    <span class="fw-bold fs-5 text-primary" id="usrTotalAmount">$0.00</span>
                                </div>
                            </div>

                            <div class="buttons button_space">
                                <button class="back_button">Back</button>
                                <button class="submit_button" id="submitWithdrawalButton">Confirm Withdrawal</button>
                            </div>
                        </div>

                        <!-- Success Step -->
                        <div class="main">
                            <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                                <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" />
                                <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                            </svg>

                            <div class="text congrats">
                                <h2>Withdrawal Request Submitted!</h2>
                                <p>Your withdrawal request of <strong>$0.00</strong> has been processed successfully. Funds will be transferred within 2-3 business days. Transaction ID: <strong>#TX-7845</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content end -->

<style>
    .wallet-balance-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .wallet-balance-card h2 {
            font-size: 2.5rem;
            margin: 0;
        }

    .payment-icon {
        font-size: 24px;
        margin-right: 15px;
        color: #667eea;
    }

    .payment-option {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .payment-option:hover {
            border-color: #667eea;
            background-color: #f8f9fa;
        }

        .payment-option.selected {
            border-color: #667eea;
            background-color: rgba(102, 126, 234, 0.1);
        }

    .selectable-account,
    .selectable-address {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .selectable-account:hover,
        .selectable-address:hover {
            border-color: #28a745;
            background-color: #f8f9fa;
        }

        .selectable-account.selected,
        .selectable-address.selected {
            border-color: #28a745;
            background-color: rgba(40, 167, 69, 0.1);
        }

    .summary-item {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        border-left: 4px solid #28a745;
    }

        .summary-item h5 {
            color: #495057;
            margin-bottom: 10px;
            font-size: 16px;
        }

    .input-div {
        position: relative;
        margin-bottom: 20px;
    }

        .input-div input,
        .input-div select {
            width: 100%;
            padding: 12px;
            border: 2px solid #dee2e6;
            border-radius: 6px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .input-div input:focus,
            .input-div select:focus {
                border-color: #667eea;
                outline: none;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

        .input-div span {
            position: absolute;
            left: 12px;
            top: -8px;
            background: white;
            padding: 0 5px;
            font-size: 12px;
            color: #667eea;
            font-weight: 500;
        }

    .buttons {
        display: flex;
        gap: 10px;
        margin-top: 30px;
    }

        .buttons button {
            padding: 12px 30px;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

    .next_button,
    .submit_button {
        background: #28a745;
        color: white;
    }

        .next_button:hover,
        .submit_button:hover {
            background: #218838;
            transform: translateY(-2px);
        }

    .back_button {
        background: #6c757d;
        color: white;
    }

        .back_button:hover {
            background: #5a6268;
        }
</style>
<script src="~/js/jquery/jquery.min.js"></script>
<script src="~/js/Application/RedeemRewardsController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new RedeemRewardsController();
        ctrl.init();
    });
</script>