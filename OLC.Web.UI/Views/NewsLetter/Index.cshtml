@{
    ViewData["Title"] = "NewsLetter - Manage different NewsLetter categories for users.";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 fw-bold text-primary">
                            News Letter
                        </h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="card border">
                        <div class="card-header bg-white py-3 border-bottom">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-database me-2"></i> All News Letters
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <!-- Desktop Table View -->
                            <div class="table-responsive d-none d-lg-block" style="max-height: 600px; overflow-y: auto;">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light" style="position: sticky; top: 0; z-index: 1; background-color: #f8f9fa;">
                                        <tr>
                                            <th scope="col">Id</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">SubscribedOn</th>
                                            <th scope="col">UnsubscribedOn</th>
                                            <th scope="col">CreatedOn</th>
                                            <th scope="col">ModifiedOn</th>
                                            <th scope="col">IsActive</th>
                                        </tr>
                                    </thead>
                                    <tbody id="newsLettersBody"></tbody>
                                </table>
                            </div>

                            <!-- Mobile Card View -->
                            <div class="d-lg-none" id="mobileNewsLettersCards">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Partials for Modals -->
    <partial name="_ActiveNewsLetter" />
    <partial name="_AddEditNewsLetter.cshtml" />
    <partial name="_ViewNewsLetter.cshtml" />
</div>

<script src="~/js/jquery/jquery.min.js"></script>
<script src="~/js/Application/NewsLetterController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new NewsLetterController();
        ctrl.init();
    });
</script>

