<!-- KYC Init Confirmation Modal -->
<div class="modal fade" id="initKycModal" tabindex="-1" aria-labelledby="kycInitModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="kycInitModalLabel">Initialize KYC Process</h5>
                <button type="button" class="btn-close close-key-init" data-bs-dismiss="modal" aria-label="Close">X</button>
            </div>
            <div class="modal-body">
                <form id="kycInitForm">
                    <div class="mb-3">
                        <label for="initKycLevel" class="form-label">KYC Level</label>
                        <select class="form-select" id="initKycLevel" required>
                            <option value="">Select KYC Level</option>
                            <option value="level1">Level 1 - Basic Info</option>
                            <option value="level2">Level 2 - Document Verification</option>
                            <option value="level3">Level 3 - Biometric Verification</option>
                        </select>
                        <div class="form-text">Select the appropriate KYC level for this user.</div>
                    </div>
                    <div class="mb-3">
                        <label for="initKycNotes" class="form-label">Additional Notes</label>
                        <textarea class="form-control" id="initKycNotes" rows="4" placeholder="Add any additional notes or instructions for KYC process..."></textarea>
                        <div class="form-text">Optional: Add any specific instructions or notes for the KYC verification team.</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close-key-init" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmInitKycBtn">Initialize KYC</button>
            </div>
        </div>
    </div>
</div>
