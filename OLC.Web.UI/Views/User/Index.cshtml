@{
    ViewData["Title"] = "User Accounts - Manage all user accounts in the system";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="card">
        <div class="card-header">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3">
                    <div>
                        <h1 class="h3 fw-bold text-primary">User Accounts</h1>
                        <p class="text-muted mb-0">Manage all user accounts in the system.</p>
                    </div>
                    <button type="button" class="btn btn-primary" id="addUserBtn">
                        <i class="fas fa-plus me-1"></i> Add User
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Summary Cards -->
            <div class="row g-4 mb-5">
                <!-- Total Users Card -->
                <div class="col-xl-3 col-md-6">
                    <div class="card summary-card h-100 border">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title text-muted">Total Users</h5>
                                    <h2 class="fw-bold text-primary" id="totalUsers">0</h2>
                                </div>
                                <div class="card-icon bg-primary text-white">
                                    <i class="fas fa-users"></i>
                                </div>
                            </div>
                            <p class="card-text text-success">
                                <i class="fas fa-arrow-up"></i> <span id="usersChange">0%</span> from last month
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Active Users Card -->
                <div class="col-xl-3 col-md-6">
                    <div class="card summary-card h-100 border">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title text-muted">Active Users</h5>
                                    <h2 class="fw-bold text-success" id="activeUsers">0</h2>
                                </div>
                                <div class="card-icon bg-success text-white">
                                    <i class="fas fa-user-check"></i>
                                </div>
                            </div>
                            <p class="card-text text-success">
                                <i class="fas fa-arrow-up"></i> <span id="activeChange">0%</span> from last month
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Blocked Users Card -->
                <div class="col-xl-3 col-md-6">
                    <div class="card summary-card h-100 border">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title text-muted">Blocked Users</h5>
                                    <h2 class="fw-bold text-warning" id="blockedUsers">0</h2>
                                </div>
                                <div class="card-icon bg-warning text-white">
                                    <i class="fas fa-user-slash"></i>
                                </div>
                            </div>
                            <p class="card-text text-danger">
                                <i class="fas fa-arrow-down"></i> <span id="blockedChange">0%</span> from last month
                            </p>
                        </div>
                    </div>
                </div>

                <!-- External Users Card -->
                <div class="col-xl-3 col-md-6">
                    <div class="card summary-card h-100 border">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title text-muted">External Users</h5>
                                    <h2 class="fw-bold text-info" id="externalUsers">0</h2>
                                </div>
                                <div class="card-icon bg-info text-white">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                            </div>
                            <p class="card-text text-success">
                                <i class="fas fa-arrow-up"></i> <span id="externalChange">0%</span> from last month
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Accounts Table -->
            <div class="row">
                <div class="col-12">
                    <div class="card border">
                        <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-users me-2"></i>All User Accounts
                            </h5>
                            <div class="input-group" style="max-width: 300px;">
                                <input type="text" class="form-control" placeholder="Search users..." id="userSearch">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-search"></i>
                                </span>
                            </div>
                        </div>

                        <!-- Desktop Table View (hidden on mobile) -->
                        <div class="card-body p-0 d-none d-lg-block">
                            <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                                <table class="table table-hover mb-0" id="userAccountsTable">
                                    <thead class="table-light" style="position: sticky; top: 0; z-index: 1;">
                                        <tr>
                                            <th scope="col">User ID</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Phone</th>
                                            <th scope="col">Role</th>
                                            <th scope="col">Is External</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Kyc Status</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="userAccountsBody">
                                        <!-- Data will be populated dynamically -->
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Mobile Card View (hidden on desktop) -->
                        <div class="card-body p-0 d-lg-none" id="mobileUserAccountsCards">
                            <!-- User account cards will be populated here dynamically -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <partial name="_createportaluserpartial.cshtml" />
    <partial name="_initlizeUserKycPartial.cshtml" />
    <partial name="_previewKycDocumentPartail.cshtml" />
</div>


<script src="~/js/jquery/jquery.min.js"></script>
<script src="~/js/Application/UserController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new UserController();
        ctrl.init();
    });
</script>