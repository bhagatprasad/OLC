@{
    ViewData["Title"] = "Service Requests";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 fw-bold text-primary">
                            Service Requests
                        </h1>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary" id="addServiceRequest">
                            <i class="fas fa-plus me-2"></i> Add Request
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="card border">
                        <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-credit-card me-2"></i>My Service Requests
                            </h5>
                            <div class="input-group" style="max-width: 300px;">
                                <input type="text" class="form-control" placeholder="Search orders..." id="orderSearch">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-search"></i>
                                </span>
                            </div>
                        </div>
                        <div class="card-body p-0">

                            <div class="mt-3" id="serviceRequestList">
                               
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <partial name="Create.cshtml" />
</div>

<script src="~/js/jquery/jquery.min.js"></script>
<script src="~/js/Application/ServiceRequestController.js"></script>

<script>
    $(function () {
        const ctrl = new ServiceRequestController();
        ctrl.init();
    });
</script>