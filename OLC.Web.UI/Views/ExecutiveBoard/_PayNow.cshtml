<!-- _PayNowModal.cshtml -->
<div class="modal fade" id="payNowModal" tabindex="-1"
     data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- HEADER: Order Ref + Close -->
            <div class="modal-header border-0 pb-2 d-flex justify-content-between align-items-center">
                <h5 class="modal-title fw-bold text-primary mb-0" id="payNowOrderRef"></h5>
               
                <button type="button" class="btn-close" id="btnClosePayNowModal" aria-label="Close">X</button>
            </div>

            <!-- BODY -->
            <div class="modal-body pt-0">

                <div class="mb-3">
                    <label class="form-label">Total Amount</label>
                    <input type="text" class="form-control" id="txtTotalAmount" readonly>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chkFullAmount" checked>
                        <label class="form-check-label" for="chkFullAmount">
                            Do you want to pay <strong>full amount ?</strong>
                        </label>
                    </div>
                </div>

                <div class="mb-3" id="partialAmountGroup" style="display: none;">
                    <label class="form-label">Enter Partial Amount</label>
                    <input type="number" class="form-control" id="txtPartialAmount" step="0.01" min="0.01" placeholder="0.00">
                    <div class="invalid-feedback">Amount must be > 0 and ≤ total.</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Pending Amount</label>
                    <input type="text" class="form-control" id="txtPendingAmount" readonly>
                </div>
            </div>

            <!-- FOOTER: Cancel (cancels Pay Now) + Pay Now -->
            <div class="modal-footer border-0 pt-2 justify-content-end">
                <button type="button" class="btn btn-secondary me-2" id="btnClosePayNowModal">
                    Cancel
                </button>
                <button type="button" class="btn btn-success" id="btnConfirmPayNow">
                    Pay Now
                </button>
            </div>

        </div>
    </div>
</div>