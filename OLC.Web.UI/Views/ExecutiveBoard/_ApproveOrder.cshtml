<!-- Approve Order Modal -->
<div class="modal fade" id="approveOrderModal" tabindex="-1" aria-labelledby="approveOrderLabel" aria-hidden="true"  data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="approveOrderLabel">Are you sure you want to approve this order?</h5>
                <button type="button" class="btn-close btn-approve-order-close" data-bs-dismiss="modal" aria-label="Close">X</button>

            </div>
            <div class="modal-body" style="padding:0">
                <div class="text-center" style="margin:5px;">
                    <textarea id="approvalComment" class="form-control" rows="4" placeholder="Type your message here..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-approve-order-close" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="btnApproveOrder">Approve</button>
            </div>
        </div>
    </div>
</div>

