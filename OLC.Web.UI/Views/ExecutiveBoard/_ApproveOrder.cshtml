<!-- Approve Order Modal -->
<div class="modal fade" id="approveOrderModal" tabindex="-1" aria-labelledby="approveOrderLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="approveOrderLabel">Are you sure you want to approve this order?</h5>
                <button type="button" class="btn-close btn-approve-order-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body" style="padding:0">
                <div class="credit-card">
                    <i class="fas fa-check-circle chip-icon"></i>
                    <div class="text-center mt-5 mb-4">
                        <label for="approvalComment" class="form-label">Enter your message</label>
                        <textarea id="approvalComment" class="form-control" rows="4" placeholder="Type your message here..."></textarea>
                        <div id="errorMsg" class="text-danger mt-2" style="display:none;">Please enter a message before processing.</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-approve-order-close" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="btnApproveOrder">Approve</button>
            </div>
        </div>
    </div>
</div>

