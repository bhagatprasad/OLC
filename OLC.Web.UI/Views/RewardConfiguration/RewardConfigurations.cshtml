@{
    ViewData["Title"] = "RewardConfiguration - Manage different RewardConfiguration categories for users.";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3">
                    <div>
                        <h1 class="h3 fw-bold text-primary">
                            Reward Configuration
                        </h1>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary" id="addRewardConfigurationBtn">
                            <i class="fas fa-plus me-2"></i> Add Type
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="card border">
                        <div class="card-header bg-white py-3 border-bottom">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-database me-2"></i> All Reward Configuration
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <!-- Desktop Table View -->
                            <div class="table-responsive d-none d-lg-block" style="max-height: 600px; overflow-y: auto;">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light" style="position: sticky; top: 0; z-index: 1; background-color: #f8f9fa;">
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">RewardName</th>
                                            <th scope="col">RewardType</th>
                                            <th scope="col">RewardValue</th>
                                            <th scope="col">Minimum TransationAmount</th>
                                            <th scope="col">Maximum Reward</th>
                                            <th scope="col">ValidFrom</th>
                                            <th scope="col">ValidTo</th>
                                            <th scope="col">IsActive</th>
                                            <th scope="col">CreatedBy</th>
                                            <th scope="col">ModifiedBy</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="rewardConfigurationBody"></tbody>
                                </table>
                            </div>

                            <!-- Mobile Card View -->
                            <div class="d-lg-none" id="mobileRewardConfigurationCards">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Partials for Modals -->
    <partial name="_ActiveRewardConfiguration.cshtml" />
    <partial name="_AddEditRewardConfiguration.cshtml" />
    <partial name="_ViewRewardConfiguration.cshtml" />
    <partial name="_DeleteRewardConfiguration.cshtml" />
</div>

<script src="~/js/jquery/jquery.min.js"></script>
<script src="~/js/Application/RewardConfigurationController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new RewardConfigurationController();
        ctrl.init();
    });
</script>

