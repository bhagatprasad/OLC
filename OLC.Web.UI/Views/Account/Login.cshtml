@{

    ViewData["Title"] = "Request Money-Request your payment on anytime, anywhere in the world.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div class="login-signup-page mx-auto my-5">
        <h3 class="font-weight-400 text-center">Sign In</h3>
        <p class="lead text-center">Your login information is safe with us.</p>
        <div class="bg-light shadow-md rounded p-4 mx-2">

            <form id="formAuthentication">
                <div class="form-group">
                    <label for="username">Phone / Email</label>
                    <input type="text" id="username" class="form-control" placeholder="Enter your Email /Phone" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-group">
                        <input type="password" id="password" class="form-control" placeholder="Enter your password" required />
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fa fa-eye-slash" id="eye"></i></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <div class="form-check custom-control custom-checkbox">
                            <input id="remember-me" name="remember" class="custom-control-input" type="checkbox">
                            <label class="custom-control-label" for="remember-me">Remember Me</label>
                        </div>
                    </div>
                    <div class="col-sm text-right"><a class="btn-link" href="@Url.Action("ForgotPassword", "Account", null)">Forgot Password ?</a></div>
                </div>

                <button class="btn btn-primary btn-block my-4" type="submit" id="btnSubmit">Sign In</button>
            </form>
            <div class="mb-2">
                <a href="@Url.Action("ExternalLogin", "Account", null)" class="btn btn-block btn-google auth-form-btn">
                    <i class="fa fa-google-plus-official yellow-color me-2"></i> Connect using google
                </a>
            </div>
            <p class="text-3 text-muted text-center mb-0">Don't have an account? <a class="btn-link" href="@Url.Action("SignUp", "Account", null)">Sign Up</a></p>
        </div>
    </div>
</div>
<style>
    form i {
        cursor: pointer;
    }

    .yellow-color {
        color: yellow;
    }
</style>
<!-- Content end -->
<script src="~/js/jquery/jquery.min.js"></script>
<script src="~/js/Application/LoginController.js"></script>
<script src="~/js/Application/PasswordSettingsController.js"></script>
<script type="text/javascript">
    $(function () {
        var login= new LoginController();
        login.init();

        var ctrl = new PasswordSettingsController();
        ctrl.init();
    });
</script>