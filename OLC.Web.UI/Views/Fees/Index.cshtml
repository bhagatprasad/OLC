<script>
    $(function () {
        // Timer for Standard Processing
        function updateStandardTimer() {
            const now = new Date();
            let nextBatch = new Date(now);

            // Set next batch time (9AM, 1PM, 5PM)
            const batchTimes = [9, 13, 17]; // 9AM, 1PM, 5PM
            let nextTime = null;

            for (const hour of batchTimes) {
                nextBatch.setHours(hour, 0, 0, 0);
                if (nextBatch > now) {
                    nextTime = nextBatch;
                    break;
                }
            }

            // If no batch today, set to next day 9AM
            if (!nextTime) {
                nextBatch.setDate(nextBatch.getDate() + 1);
                nextBatch.setHours(9, 0, 0, 0);
                nextTime = nextBatch;
            }

            const diff = nextTime - now;
            const hours = Math.floor(diff / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            const timerElement = document.getElementById('standardTimer');
            if (timerElement) {
                timerElement.textContent =
                    `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }
        }

        // Update timer every second
        setInterval(updateStandardTimer, 1000);
        updateStandardTimer();

        // Calculate next day
        function updateNextDayDate() {
            const now = new Date();
            let nextDay = new Date(now);

            // Skip weekends
            const day = now.getDay();
            if (day === 5) { // Friday
                nextDay.setDate(nextDay.getDate() + 3); // Monday
            } else if (day === 6) { // Saturday
                nextDay.setDate(nextDay.getDate() + 2); // Monday
            } else {
                nextDay.setDate(nextDay.getDate() + 1);
            }

            // Set to 9 AM
            nextDay.setHours(9, 0, 0, 0);

            const options = { weekday: 'long', hour: '2-digit', minute: '2-digit' };
            const formattedDate = nextDay.toLocaleDateString('en-IN', options);

            const dateElement = document.getElementById('nextDayDate');
            if (dateElement) {
                dateElement.textContent = formattedDate;
            }
        }

        updateNextDayDate();

        // Card selection functionality
        const cards = document.querySelectorAll('.processing-card');
        const buttons = document.querySelectorAll('.processing-card .btn');

        buttons.forEach(button => {
            button.addEventListener('click', function() {
                const card = this.closest('.processing-card');

                // Remove selection from all cards
                cards.forEach(c => {
                    c.style.transform = 'translateY(0)';
                    c.style.boxShadow = '0 15px 30px rgba(0, 0, 0, 0.1)';
                    c.style.border = 'none';
                });

                // Highlight selected card
                card.style.transform = 'translateY(-20px)';
                card.style.boxShadow = '0 30px 60px rgba(0, 0, 0, 0.2)';

                if (card.classList.contains('instant-card')) {
                    card.style.border = '3px solid #ffd700';
                } else if (card.classList.contains('standard-card')) {
                    card.style.border = '3px solid #667eea';
                } else if (card.classList.contains('nextday-card')) {
                    card.style.border = '3px solid #28a745';
                }

                // Show confirmation toast
                const toast = new bootstrap.Toast(document.createElement('div'));
                toast._element.innerHTML = `
                    <div class="toast-header bg-success text-white">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong class="me-auto">Selected!</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        Processing speed selected. Proceed to payment details.
                    </div>
                `;
                document.body.appendChild(toast._element);
                toast.show();

                setTimeout(() => {
                    toast._element.remove();
                }, 3000);
            });
        });

        // Hover animations
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                const pulseCircle = this.querySelector('.pulse-circle');
                if (pulseCircle) {
                    pulseCircle.style.animation = 'pulse 1s infinite';
                }
            });

            card.addEventListener('mouseleave', function() {
                const pulseCircle = this.querySelector('.pulse-circle');
                if (pulseCircle) {
                    pulseCircle.style.animation = 'none';
                }
            });
        });

        // Animate rate cards on hover
        const rateCards = document.querySelectorAll('.rate-card');
        rateCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                const icons = this.querySelectorAll('.fab, .fas');
                icons.forEach(icon => {
                    icon.style.transform = 'scale(1.2)';
                    icon.style.transition = 'transform 0.3s ease';
                });
            });

            card.addEventListener('mouseleave', function() {
                const icons = this.querySelectorAll('.fab, .fas');
                icons.forEach(icon => {
                    icon.style.transform = 'scale(1)';
                });
            });
        });

        // Auto-rotate animation for instant card
        const instantIcon = document.querySelector('.instant-card .icon-circle i');
        if (instantIcon) {
            setInterval(() => {
                instantIcon.style.transform = 'rotate(360deg)';
                instantIcon.style.transition = 'transform 0.5s ease';

                setTimeout(() => {
                    instantIcon.style.transform = 'rotate(0deg)';
                }, 500);
            }, 3000);
        }

        // Animate background shapes on scroll
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            const shapes = document.querySelectorAll('.bg-shape, .floating-dot');

            shapes.forEach((shape, index) => {
                const speed = 0.3 + (index * 0.1);
                const yPos = -(scrolled * speed * 0.05);
                shape.style.transform = `translateY(${yPos}px)`;
            });
        });

        // Add CSS for animations
        const style = document.createElement('style');
        style.textContent = `
            keyframes processingLine {
                0% { left: -100%; }
                100% { left: 100%; }
            }

            keyframes pulse {
                0% {
                    transform: translate(-50%, -50%) scale(0.8);
                    opacity: 0.5;
                }
                100% {
                    transform: translate(-50%, -50%) scale(2);
                    opacity: 0;
                }
            }

            .processing-card {
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .rate-card {
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .help-card {
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            }
        `;
        document.head.appendChild(style);
    });
</script>