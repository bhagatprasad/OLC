@model OLC.Web.UI.Models.PaymentSuccessViewModel
@{

    ViewData["Title"] = "Payment Successful";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3">
                    <div>
                        <h1 class="h3 fw-bold text-success">
                            <i class="fas fa-check-circle me-2"></i> Payment Successful
                        </h1>
                        <p class="text-muted mb-0">Your transaction has been completed successfully</p>
                    </div>
                    <div>
                        <button type="button" class="btn btn-outline-primary" onclick="window.print()">
                            <i class="fas fa-print me-2"></i> Print Receipt
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            @if (ViewBag.IsSuccess == true)
            {
                <div class="row">
                    <!-- Desktop Table View -->
                    <div class="col-12 d-none d-lg-block">
                        <div class="card border">
                            <div class="card-header bg-white py-3 border-bottom">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-receipt me-2"></i> Transaction Details
                                </h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col">Detail</th>
                                                <th scope="col">Value</th>
                                                <th scope="col">Status</th>
                                                <th scope="col">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Order Reference -->
                                            @if (!string.IsNullOrEmpty(Model.OrderReference))
                                            {
                                                <tr>
                                                    <td class="fw-bold">Order Reference</td>
                                                    <td>@Model.OrderReference</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@Model.OrderReference')">
                                                            <i class="fas fa-copy"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }

                                            <!-- Payment Order ID -->
                                            @if (Model.PaymentOrderId.HasValue)
                                            {
                                                <tr>
                                                    <td class="fw-bold">Payment Order ID</td>
                                                    <td>#@Model.PaymentOrderId</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('#@Model.PaymentOrderId')">
                                                            <i class="fas fa-copy"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }

                                            <!-- Transaction ID -->
                                            <tr>
                                                <td class="fw-bold">Transaction ID</td>
                                                <td class="font-monospace">@Model.SessionId</td>
                                                <td><span class="badge bg-success">Completed</span></td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@Model.SessionId')">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                </td>
                                            </tr>

                                            <!-- Payment Intent ID -->
                                            @if (!string.IsNullOrEmpty(Model.PaymentIntentId))
                                            {
                                                <tr>
                                                    <td class="fw-bold">Payment Intent ID</td>
                                                    <td class="font-monospace small">@Model.PaymentIntentId</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@Model.PaymentIntentId')">
                                                            <i class="fas fa-copy"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }

                                            <!-- Amount Paid -->
                                            @if (Model.AmountTotal.HasValue)
                                            {
                                                <tr>
                                                    <td class="fw-bold">Amount Paid</td>
                                                    <td class="fw-bold fs-5 text-success">@Model.AmountTotal.Value.ToString("C") @Model.Currency</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td></td>
                                                </tr>
                                            }

                                            <!-- Payment Method -->
                                            @if (!string.IsNullOrEmpty(Model.PaymentMethod))
                                            {
                                                <tr>
                                                    <td class="fw-bold">Payment Method</td>
                                                    <td class="text-capitalize">
                                                        <i class="fas fa-credit-card me-2"></i>@Model.PaymentMethod
                                                    </td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td></td>
                                                </tr>
                                            }

                                            <!-- Date & Time -->
                                            @if (Model.Created.HasValue)
                                            {
                                                <tr>
                                                    <td class="fw-bold">Date & Time</td>
                                                    <td>@Model.Created.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td></td>
                                                </tr>
                                            }

                                            <!-- Customer Email -->
                                            @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                                            {
                                                <tr>
                                                    <td class="fw-bold">Customer Email</td>
                                                    <td class="text-primary">@Model.CustomerEmail</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td></td>
                                                </tr>
                                            }

                                            <!-- Customer Name -->
                                            @if (!string.IsNullOrEmpty(Model.CustomerName))
                                            {
                                                <tr>
                                                    <td class="fw-bold">Customer Name</td>
                                                    <td>@Model.CustomerName</td>
                                                    <td><span class="badge bg-success">Completed</span></td>
                                                    <td></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mobile Card View -->
                    <div class="col-12 d-lg-none">
                        <div class="card border">
                            <div class="card-header bg-white py-3 border-bottom">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-receipt me-2"></i> Transaction Details
                                </h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                    <!-- Order Reference -->
                                    @if (!string.IsNullOrEmpty(Model.OrderReference))
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Order Reference</h6>
                                                <p class="mb-1">@Model.OrderReference</p>
                                            </div>
                                            <div class="text-end">
                                                <span class="badge bg-success mb-2">Completed</span>
                                                <br>
                                                <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@Model.OrderReference')">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }

                                    <!-- Payment Order ID -->
                                    @if (Model.PaymentOrderId.HasValue)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Payment Order ID</h6>
                                                <p class="mb-1">#@Model.PaymentOrderId</p>
                                            </div>
                                            <div class="text-end">
                                                <span class="badge bg-success mb-2">Completed</span>
                                                <br>
                                                <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('#@Model.PaymentOrderId')">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }

                                    <!-- Transaction ID -->
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Transaction ID</h6>
                                            <p class="mb-1 font-monospace small">@Model.SessionId</p>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-success mb-2">Completed</span>
                                            <br>
                                            <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@Model.SessionId')">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Payment Intent ID -->
                                    @if (!string.IsNullOrEmpty(Model.PaymentIntentId))
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Payment Intent ID</h6>
                                                <p class="mb-1 font-monospace small">@Model.PaymentIntentId</p>
                                            </div>
                                            <div class="text-end">
                                                <span class="badge bg-success mb-2">Completed</span>
                                                <br>
                                                <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@Model.PaymentIntentId')">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }

                                    <!-- Amount Paid -->
                                    @if (Model.AmountTotal.HasValue)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Amount Paid</h6>
                                                <p class="mb-1 text-success fw-bold">@Model.AmountTotal.Value.ToString("C") @Model.Currency</p>
                                            </div>
                                            <div>
                                                <span class="badge bg-success">Completed</span>
                                            </div>
                                        </div>
                                    }

                                    <!-- Payment Method -->
                                    @if (!string.IsNullOrEmpty(Model.PaymentMethod))
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Payment Method</h6>
                                                <p class="mb-1 text-capitalize">
                                                    <i class="fas fa-credit-card me-2"></i>@Model.PaymentMethod
                                                </p>
                                            </div>
                                            <div>
                                                <span class="badge bg-success">Completed</span>
                                            </div>
                                        </div>
                                    }

                                    <!-- Date & Time -->
                                    @if (Model.Created.HasValue)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Date & Time</h6>
                                                <p class="mb-1">@Model.Created.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
                                            </div>
                                            <div>
                                                <span class="badge bg-success">Completed</span>
                                            </div>
                                        </div>
                                    }

                                    <!-- Customer Email -->
                                    @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Customer Email</h6>
                                                <p class="mb-1 text-primary">@Model.CustomerEmail</p>
                                            </div>
                                            <div>
                                                <span class="badge bg-success">Completed</span>
                                            </div>
                                        </div>
                                    }

                                    <!-- Customer Name -->
                                    @if (!string.IsNullOrEmpty(Model.CustomerName))
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Customer Name</h6>
                                                <p class="mb-1">@Model.CustomerName</p>
                                            </div>
                                            <div>
                                                <span class="badge bg-success">Completed</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card border">
                            <div class="card-header bg-white py-3 border-bottom">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-rocket me-2"></i> Quick Actions
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card border">
                            <div class="card-header bg-white py-3 border-bottom">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-info-circle me-2"></i> Additional Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <!-- User Information -->
                                    @if (!string.IsNullOrEmpty(Model.UserId))
                                    {
                                        <div class="col-md-4 mb-3">
                                            <div class="border-start border-3 border-primary ps-3">
                                                <small class="text-muted d-block">User ID</small>
                                                <div class="fw-bold text-primary">@Model.UserId</div>
                                            </div>
                                        </div>
                                    }

                                    <!-- Payment Method Details -->
                                    @if (!string.IsNullOrEmpty(Model.CreditCardId))
                                    {
                                        <div class="col-md-4 mb-3">
                                            <div class="border-start border-3 border-info ps-3">
                                                <small class="text-muted d-block">Credit Card</small>
                                                <div class="fw-bold text-info">@Model.CreditCardId</div>
                                            </div>
                                        </div>
                                    }

                                    <!-- Bank Account Details -->
                                    @if (!string.IsNullOrEmpty(Model.BankAccountId))
                                    {
                                        <div class="col-md-4 mb-3">
                                            <div class="border-start border-3 border-warning ps-3">
                                                <small class="text-muted d-block">Bank Account</small>
                                                <div class="fw-bold text-warning">@Model.BankAccountId</div>
                                            </div>
                                        </div>
                                    }

                                    <!-- Billing Address Details -->
                                    @if (!string.IsNullOrEmpty(Model.BillingAddressId))
                                    {
                                        <div class="col-md-4 mb-3">
                                            <div class="border-start border-3 border-success ps-3">
                                                <small class="text-muted d-block">Billing Address</small>
                                                <div class="fw-bold text-success">@Model.BillingAddressId</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Error State -->
                <div class="text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                    <h3 class="text-warning mb-3">Payment Status Unknown</h3>
                    <p class="text-muted mb-4">@ViewBag.Error</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-center">
                        <a href="@Url.Action("Index", "UserBoard")" class="btn btn-primary me-md-2">
                            <i class="fas fa-tachometer-alt me-2"></i>Back to Dashboard
                        </a>
                        <a href="@Url.Action("Create", "Payment")" class="btn btn-outline-primary">
                            <i class="fas fa-credit-card me-2"></i>Try Payment Again
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="card-footer bg-light py-3">
            <div class="row align-items-center">
                <div class="col">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>Secured by Stripe • Transaction ID: @Model.SessionId
                    </small>
                </div>
                <div class="col-auto">
                    <small class="text-muted">
                        Confirmation generated on @DateTime.Now.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
          setTimeout(function() {
              window.location.href = "/UserBoard/Index";
          }, 5000);
      });
</script>