@{

    ViewData["Title"] = "Payment Cancelled";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3">
                    <div>
                        <h1 class="h3 fw-bold text-warning">
                            <i class="fas fa-times-circle me-2"></i> Payment Cancelled
                        </h1>
                        <p class="text-muted mb-0">Your payment process was interrupted</p>
                    </div>
                    <div>
                        <a href="@Url.Action("Create", "Payment")" class="btn btn-primary">
                            <i class="fas fa-redo me-2"></i> Try Again
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <!-- Main Content -->
            <div class="row">
                <!-- Desktop Table View -->
                <div class="col-12 d-none d-lg-block">
                    <div class="card border">
                        <div class="card-header bg-white py-3 border-bottom">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i> Cancellation Details
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">Detail</th>
                                            <th scope="col">Value</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Session ID -->
                                        @if (!string.IsNullOrEmpty(ViewBag.SessionId))
                                        {
                                            <tr>
                                                <td class="fw-bold">Session ID</td>
                                                <td class="font-monospace">@ViewBag.SessionId</td>
                                                <td><span class="badge bg-warning">Cancelled</span></td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@ViewBag.SessionId')">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }

                                        <!-- Order Reference -->
                                        @if (!string.IsNullOrEmpty(Model?.OrderReference))
                                        {
                                            <tr>
                                                <td class="fw-bold">Order Reference</td>
                                                <td>@Model.OrderReference</td>
                                                <td><span class="badge bg-warning">Cancelled</span></td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@Model.OrderReference')">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }

                                        <!-- Payment Order ID -->
                                        @if (Model?.PaymentOrderId.HasValue == true)
                                        {
                                            <tr>
                                                <td class="fw-bold">Payment Order ID</td>
                                                <td>#@Model.PaymentOrderId</td>
                                                <td><span class="badge bg-warning">Cancelled</span></td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('#@Model.PaymentOrderId')">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }

                                        <!-- Amount -->
                                        @if (Model?.AmountTotal.HasValue == true)
                                        {
                                            <tr>
                                                <td class="fw-bold">Amount</td>
                                                <td class="fw-bold text-muted">@Model.AmountTotal.Value.ToString("C") @Model.Currency</td>
                                                <td><span class="badge bg-warning">Not Charged</span></td>
                                                <td></td>
                                            </tr>
                                        }

                                        <!-- Payment Method -->
                                        @if (!string.IsNullOrEmpty(Model?.PaymentMethod))
                                        {
                                            <tr>
                                                <td class="fw-bold">Payment Method</td>
                                                <td class="text-capitalize">
                                                    <i class="fas fa-credit-card me-2"></i>@Model.PaymentMethod
                                                </td>
                                                <td><span class="badge bg-warning">Cancelled</span></td>
                                                <td></td>
                                            </tr>
                                        }

                                        <!-- Date & Time -->
                                        @if (Model?.Created.HasValue == true)
                                        {
                                            <tr>
                                                <td class="fw-bold">Date & Time</td>
                                                <td>@Model.Created.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")</td>
                                                <td><span class="badge bg-warning">Cancelled</span></td>
                                                <td></td>
                                            </tr>
                                        }

                                        <!-- Customer Email -->
                                        @if (!string.IsNullOrEmpty(Model?.CustomerEmail))
                                        {
                                            <tr>
                                                <td class="fw-bold">Customer Email</td>
                                                <td class="text-primary">@Model.CustomerEmail</td>
                                                <td><span class="badge bg-warning">Cancelled</span></td>
                                                <td></td>
                                            </tr>
                                        }

                                        <!-- Customer Name -->
                                        @if (!string.IsNullOrEmpty(Model?.CustomerName))
                                        {
                                            <tr>
                                                <td class="fw-bold">Customer Name</td>
                                                <td>@Model.CustomerName</td>
                                                <td><span class="badge bg-warning">Cancelled</span></td>
                                                <td></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mobile Card View -->
                <div class="col-12 d-lg-none">
                    <div class="card border">
                        <div class="card-header bg-white py-3 border-bottom">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i> Cancellation Details
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                <!-- Session ID -->
                                @if (!string.IsNullOrEmpty(ViewBag.SessionId))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Session ID</h6>
                                            <p class="mb-1 font-monospace small">@ViewBag.SessionId</p>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-warning mb-2">Cancelled</span>
                                            <br>
                                            <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@ViewBag.SessionId')">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                }

                                <!-- Order Reference -->
                                @if (!string.IsNullOrEmpty(Model?.OrderReference))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Order Reference</h6>
                                            <p class="mb-1">@Model.OrderReference</p>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-warning mb-2">Cancelled</span>
                                            <br>
                                            <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@Model.OrderReference')">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                }

                                <!-- Payment Order ID -->
                                @if (Model?.PaymentOrderId.HasValue == true)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Payment Order ID</h6>
                                            <p class="mb-1">#@Model.PaymentOrderId</p>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-warning mb-2">Cancelled</span>
                                            <br>
                                            <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('#@Model.PaymentOrderId')">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                }

                                <!-- Amount -->
                                @if (Model?.AmountTotal.HasValue == true)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Amount</h6>
                                            <p class="mb-1 text-muted fw-bold">@Model.AmountTotal.Value.ToString("C") @Model.Currency</p>
                                        </div>
                                        <div>
                                            <span class="badge bg-warning">Not Charged</span>
                                        </div>
                                    </div>
                                }

                                <!-- Payment Method -->
                                @if (!string.IsNullOrEmpty(Model?.PaymentMethod))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Payment Method</h6>
                                            <p class="mb-1 text-capitalize">
                                                <i class="fas fa-credit-card me-2"></i>@Model.PaymentMethod
                                            </p>
                                        </div>
                                        <div>
                                            <span class="badge bg-warning">Cancelled</span>
                                        </div>
                                    </div>
                                }

                                <!-- Date & Time -->
                                @if (Model?.Created.HasValue == true)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Date & Time</h6>
                                            <p class="mb-1">@Model.Created.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
                                        </div>
                                        <div>
                                            <span class="badge bg-warning">Cancelled</span>
                                        </div>
                                    </div>
                                }

                                <!-- Customer Email -->
                                @if (!string.IsNullOrEmpty(Model?.CustomerEmail))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Customer Email</h6>
                                            <p class="mb-1 text-primary">@Model.CustomerEmail</p>
                                        </div>
                                        <div>
                                            <span class="badge bg-warning">Cancelled</span>
                                        </div>
                                    </div>
                                }

                                <!-- Customer Name -->
                                @if (!string.IsNullOrEmpty(Model?.CustomerName))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Customer Name</h6>
                                            <p class="mb-1">@Model.CustomerName</p>
                                        </div>
                                        <div>
                                            <span class="badge bg-warning">Cancelled</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border">
                        <div class="card-header bg-white py-3 border-bottom">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-rocket me-2"></i> Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                                <a href="@Url.Action("Create", "Payment")" class="btn btn-primary">
                                    <i class="fas fa-redo me-2"></i>Try Payment Again
                                </a>
                                <a href="@ViewBag.ReturnUrl" class="btn btn-outline-primary">
                                    <i class="fas fa-tachometer-alt me-2"></i>Back to Dashboard
                                </a>
                                <button class="btn btn-outline-warning" onclick="showHelpOptions()">
                                    <i class="fas fa-question-circle me-2"></i>Get Help
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Help Section (Initially Hidden) -->
            <div id="helpSection" class="row mt-4" style="display: none;">
                <div class="col-12">
                    <div class="card border-warning">
                        <div class="card-header bg-white py-3 border-bottom">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-life-ring me-2 text-warning"></i>
                                Need Assistance?
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 text-center mb-3">
                                    <div class="p-3">
                                        <i class="fas fa-envelope fa-2x text-primary mb-2"></i>
                                        <h6>Email Support</h6>
                                        <p class="small text-muted mb-2">Get help via email</p>
                                        <a href="mailto:support@yourcompany.com" class="btn btn-sm btn-outline-primary">
                                            Contact Us
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-4 text-center mb-3">
                                    <div class="p-3">
                                        <i class="fas fa-phone fa-2x text-success mb-2"></i>
                                        <h6>Phone Support</h6>
                                        <p class="small text-muted mb-2">Call our support team</p>
                                        <a href="tel:+1-555-0123" class="btn btn-sm btn-outline-success">
                                            Call Now
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-4 text-center mb-3">
                                    <div class="p-3">
                                        <i class="fas fa-comments fa-2x text-info mb-2"></i>
                                        <h6>Live Chat</h6>
                                        <p class="small text-muted mb-2">Chat with our team</p>
                                        <button class="btn btn-sm btn-outline-info" onclick="startLiveChat()">
                                            Start Chat
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Assurance -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <div class="row align-items-center text-center">
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <i class="fas fa-shield-alt fa-2x text-success me-2"></i>
                                    <div class="d-inline-block text-start">
                                        <div class="fw-bold">Secure Payment</div>
                                        <small class="text-muted">256-bit encryption</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <i class="fas fa-ban fa-2x text-warning me-2"></i>
                                    <div class="d-inline-block text-start">
                                        <div class="fw-bold">No Charges</div>
                                        <small class="text-muted">No money was taken</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <i class="fas fa-sync-alt fa-2x text-primary me-2"></i>
                                    <div class="d-inline-block text-start">
                                        <div class="fw-bold">Easy Retry</div>
                                        <small class="text-muted">Try again anytime</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer bg-light py-3">
            <div class="row align-items-center">
                <div class="col">
                    <small class="text-muted">
                        <i class="fas fa-lock me-1"></i>Your payment information is secure
                    </small>
                </div>
                <div class="col-auto">
                    <small class="text-muted">
                        Session cancelled on @DateTime.Now.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
          setTimeout(function() {
              window.location.href = "/UserBoard/Index";
          }, 5000);
      });
</script>