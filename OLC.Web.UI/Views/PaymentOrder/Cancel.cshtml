@{

    ViewData["Title"] = "Payment Cancelled";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-6">
            <!-- Cancellation Card -->
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-warning text-dark py-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-times-circle fa-3x"></i>
                        </div>
                        <div class="col">
                            <h1 class="h2 mb-0">Payment Cancelled</h1>
                            <p class="mb-0 opacity-75">Your payment process was interrupted</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Main Cancellation Content -->
                    <div class="text-center mb-4">
                        <div class="mb-4">
                            <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                            <h3 class="text-warning mb-3">Payment Not Completed</h3>
                            <p class="lead text-muted mb-4">
                                You cancelled the payment process. No charges have been made to your account.
                            </p>
                        </div>
                    </div>

                    <!-- Session Information -->
                    @if (!string.IsNullOrEmpty(ViewBag.SessionId))
                    {
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-8">
                                <div class="card bg-light border-0">
                                    <div class="card-body text-center">
                                        <h6 class="card-title mb-3">
                                            <i class="fas fa-info-circle me-2"></i>Session Information
                                        </h6>
                                        <p class="mb-2"><strong>Session ID:</strong></p>
                                        <p class="font-monospace text-muted small mb-3">@ViewBag.SessionId</p>
                                        <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('@ViewBag.SessionId')">
                                            <i class="fas fa-copy me-1"></i>Copy Session ID
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Reasons & Next Steps -->
                    <div class="row">
                        <!-- Common Reasons -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-0">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">
                                        <i class="fas fa-question-circle me-2 text-warning"></i>
                                        Common Reasons
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled">
                                        <li class="mb-3">
                                            <i class="fas fa-clock text-warning me-2"></i>
                                            <strong>Changed your mind</strong>
                                            <p class="small text-muted mb-0">You decided not to proceed with the payment</p>
                                        </li>
                                        <li class="mb-3">
                                            <i class="fas fa-credit-card text-warning me-2"></i>
                                            <strong>Payment method issues</strong>
                                            <p class="small text-muted mb-0">Problems with your selected payment method</p>
                                        </li>
                                        <li class="mb-3">
                                            <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                            <strong>Technical difficulties</strong>
                                            <p class="small text-muted mb-0">Browser or connection issues during payment</p>
                                        </li>
                                        <li>
                                            <i class="fas fa-undo text-warning me-2"></i>
                                            <strong>Need more information</strong>
                                            <p class="small text-muted mb-0">Want to review details before completing</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Next Steps -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-0">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">
                                        <i class="fas fa-road me-2 text-primary"></i>
                                        Next Steps
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled">
                                        <li class="mb-3">
                                            <i class="fas fa-redo text-primary me-2"></i>
                                            <strong>Retry payment</strong>
                                            <p class="small text-muted mb-0">Complete the payment with same details</p>
                                        </li>
                                        <li class="mb-3">
                                            <i class="fas fa-edit text-primary me-2"></i>
                                            <strong>Modify details</strong>
                                            <p class="small text-muted mb-0">Update payment method or amount</p>
                                        </li>
                                        <li class="mb-3">
                                            <i class="fas fa-home text-primary me-2"></i>
                                            <strong>Return to dashboard</strong>
                                            <p class="small text-muted mb-0">Go back to your account overview</p>
                                        </li>
                                        <li>
                                            <i class="fas fa-headset text-primary me-2"></i>
                                            <strong>Contact support</strong>
                                            <p class="small text-muted mb-0">Get help with payment issues</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-2">
                        <div class="col-12">
                            <div class="text-center">
                                <h5 class="mb-4">What would you like to do?</h5>
                                <div class="d-grid gap-2 d-md-flex justify-content-center">
                                    <!-- Primary Action - Retry -->
                                    <a href="@Url.Action("Create", "Payment")" class="btn btn-primary btn-lg me-md-3">
                                        <i class="fas fa-redo me-2"></i>Try Payment Again
                                    </a>

                                    <!-- Secondary Actions -->
                                    <a href="@ViewBag.ReturnUrl" class="btn btn-outline-primary btn-lg me-md-3">
                                        <i class="fas fa-tachometer-alt me-2"></i>Back to Dashboard
                                    </a>

                                    <button class="btn btn-outline-secondary btn-lg" onclick="showHelpOptions()">
                                        <i class="fas fa-question-circle me-2"></i>Get Help
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Help Section (Initially Hidden) -->
                    <div id="helpSection" class="row mt-4" style="display: none;">
                        <div class="col-12">
                            <div class="card border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="fas fa-life-ring me-2"></i>
                                        Need Assistance?
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4 text-center mb-3">
                                            <div class="p-3">
                                                <i class="fas fa-envelope fa-2x text-primary mb-2"></i>
                                                <h6>Email Support</h6>
                                                <p class="small text-muted mb-2">Get help via email</p>
                                                <a href="mailto:support@yourcompany.com" class="btn btn-sm btn-outline-primary">
                                                    Contact Us
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-center mb-3">
                                            <div class="p-3">
                                                <i class="fas fa-phone fa-2x text-success mb-2"></i>
                                                <h6>Phone Support</h6>
                                                <p class="small text-muted mb-2">Call our support team</p>
                                                <a href="tel:+1-555-0123" class="btn btn-sm btn-outline-success">
                                                    Call Now
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-center mb-3">
                                            <div class="p-3">
                                                <i class="fas fa-comments fa-2x text-info mb-2"></i>
                                                <h6>Live Chat</h6>
                                                <p class="small text-muted mb-2">Chat with our team</p>
                                                <button class="btn btn-sm btn-outline-info" onclick="startLiveChat()">
                                                    Start Chat
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- FAQ Section -->
                                    <div class="mt-3">
                                        <h6 class="border-bottom pb-2">Frequently Asked Questions</h6>
                                        <div class="accordion" id="faqAccordion">
                                            <div class="accordion-item">
                                                <h2 class="accordion-header">
                                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                                        Will I be charged for cancelling?
                                                    </button>
                                                </h2>
                                                <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                                    <div class="accordion-body">
                                                        No, cancelling a payment during the process will not result in any charges to your account.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="accordion-item">
                                                <h2 class="accordion-header">
                                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                                        Can I use the same payment details?
                                                    </button>
                                                </h2>
                                                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                                    <div class="accordion-body">
                                                        Yes, you can retry the payment with the same details or modify them as needed.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="accordion-item">
                                                <h2 class="accordion-header">
                                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                                        How long is my session valid?
                                                    </button>
                                                </h2>
                                                <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                                    <div class="accordion-body">
                                                        Your payment session is typically valid for 24 hours. You can retry within this period.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-light py-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <small class="text-muted">
                                <i class="fas fa-lock me-1"></i>Your payment information is secure
                            </small>
                        </div>
                        <div class="col-auto">
                            <small class="text-muted">
                                Session cancelled on @DateTime.Now.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Assurance -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <div class="row align-items-center">
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <i class="fas fa-shield-alt fa-2x text-success me-2"></i>
                                    <div class="d-inline-block text-start">
                                        <div class="fw-bold">Secure Payment</div>
                                        <small class="text-muted">256-bit encryption</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <i class="fas fa-ban fa-2x text-warning me-2"></i>
                                    <div class="d-inline-block text-start">
                                        <div class="fw-bold">No Charges</div>
                                        <small class="text-muted">No money was taken</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <i class="fas fa-sync-alt fa-2x text-primary me-2"></i>
                                    <div class="d-inline-block text-start">
                                        <div class="fw-bold">Easy Retry</div>
                                        <small class="text-muted">Try again anytime</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }

        .font-monospace {
            font-family: 'Courier New', monospace;
        }

        .list-unstyled li {
            padding: 8px 0;
            border-bottom: 1px solid #f8f9fa;
        }

            .list-unstyled li:last-child {
                border-bottom: none;
            }

        /* Hover effects */
        .btn {
            transition: all 0.3s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
            }

        /* Accordion styling */
        .accordion-button:not(.collapsed) {
            background-color: #fff3cd;
            color: #856404;
        }

        /* Print styles */
        @@media print {
            .btn, .card-footer {
                display: none !important;
            }

            .card {
                border: 1px solid #ddd !important;
                box-shadow: none !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Copy to clipboard function
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Show success message
                const originalText = event.target.innerHTML;
                event.target.innerHTML = '<i class="fas fa-check"></i> Copied!';
                event.target.classList.remove('btn-outline-secondary');
                event.target.classList.add('btn-success');

                setTimeout(() => {
                    event.target.innerHTML = originalText;
                    event.target.classList.remove('btn-success');
                    event.target.classList.add('btn-outline-secondary');
                }, 2000);
            }).catch(function(err) {
                console.error('Failed to copy text: ', err);
                alert('Failed to copy session ID');
            });
        }

        // Show help options
        function showHelpOptions() {
            const helpSection = document.getElementById('helpSection');
            if (helpSection.style.display === 'none') {
                helpSection.style.display = 'block';
                helpSection.scrollIntoView({ behavior: 'smooth' });
            } else {
                helpSection.style.display = 'none';
            }
        }

        // Simulate live chat start
        function startLiveChat() {
            alert('Live chat feature would open here. This is a demonstration.');
            // In real implementation, this would open your chat widget
        }

        // Auto-scroll to top when page loads
        document.addEventListener('DOMContentLoaded', function() {
            window.scrollTo(0, 0);

            // Add fade-in animation
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });
        });

        // Session expiry countdown (optional)
        function startSessionCountdown() {
            // This is optional - you could show when the session expires
            console.log('Session cancelled - no countdown needed for cancelled sessions');
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', startSessionCountdown);
    </script>
}