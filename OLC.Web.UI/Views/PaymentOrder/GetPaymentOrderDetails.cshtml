@{
    ViewData["Title"] = "Payment Details";
    Layout = "~/Views/Shared/_ExecutiveLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="card">
        <div class="card-header">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center pb-3">
                    <div>
                        <h1 class="h3 fw-bold text-primary">Payment Details</h1>
                        <p class="text-muted mb-0">View details for the selected payment order</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card border shadow-sm h-100">
                        <div class="card-header bg-primary text-white text-center">
                            <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Payment Information</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td><strong>Order Reference</strong></td>
                                        <td><span id="orderReference"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Amount</strong></td>
                                        <td><span id="amount"></span></td>
                                    </tr>
                                     <tr>
                                        <td><strong>Charge Amount</strong></td>
                                        <td><span id="chargeAmount"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Deposit Amount</strong></td>
                                        <td><span id="depositAmount"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>User</strong></td>
                                        <td><span id="user"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Payment Method</strong></td>
                                        <td><span id="paymentMethod"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status</strong></td>
                                        <td><span id="status"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Credit Date</strong></td>
                                        <td><span id="creditDate"></span></td>
                                    </tr>
                                </tbody>
                            </table>
                          
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- Credit Card Information -->
                    <div class="card border shadow-sm mb-4">
                        <div class="card-header bg-primary text-white text-center">
                            <h5 class="mb-0"><i class="fas fa-credit-card me-2"></i>Credit Card Used</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td><strong>Card Holder Name</strong></td>
                                        <td><span id="cardHolderName"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Card Type</strong></td>
                                        <td><span id="cardType"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Card Number</strong></td>
                                        <td><span id="cardNumberMasked"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Expiry</strong></td>
                                        <td><span id="cardExpiry"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Issuing Bank</strong></td>
                                        <td><span id="issuingBank"></span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Bank Account Information -->
                    <div class="card border shadow-sm mb-4">
                        <div class="card-header bg-success text-white text-center">
                            <h5 class="mb-0"><i class="fas fa-university me-2"></i>Bank Account</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td><strong>Account Holder</strong></td>
                                        <td><span id="bankAccountHolderName"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Bank Name</strong></td>
                                        <td><span id="bankName"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Account Number</strong></td>
                                        <td><span id="bankAccountNumber"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Account Type</strong></td>
                                        <td><span id="bankAccountType"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Branch Name</strong></td>
                                        <td><span id="bankBranchName"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>IFSC Code</strong></td>
                                        <td><span id="bankIFSC"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>SWIFT Code</strong></td>
                                        <td><span id="bankSwift"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Verification Status</strong></td>
                                        <td><span id="bankVerificationStatus"></span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Billing Address -->
                    <div class="card border shadow-sm">
                        <div class="card-header bg-warning text-white text-center">
                            <h5 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>Billing Address</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td><strong>Address Line 1</strong></td>
                                        <td><span id="addressLine1"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Address Line 2</strong></td>
                                        <td><span id="addressLine2"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Address Line 3</strong></td>
                                        <td><span id="addressLine3"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Location</strong></td>
                                        <td><span id="addressLocation"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>City</strong></td>
                                        <td><span id="addressCity"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>State</strong></td>
                                        <td><span id="addressState"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Country</strong></td>
                                        <td><span id="addressCountry"></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Pin Code</strong></td>
                                        <td><span id="addressPinCode"></span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border shadow-sm h-100">
                        <div class="card-header bg-info text-white text-center">
                            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Payment Order History</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Id</th>
                                        <th>Status</th>
                                        <th>Description</th>
                                        <th>Created By</th>
                                        <th>Created On</th>
                                        <th>Modified On</th>
                                        <th>Active</th>
                                    </tr>
                                </thead>
                                <tbody id="paymentOrderHistory">
                                    <!-- History data will be appended here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Loading Spinner -->
<div class="se-pre-con" style="display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>
<style>
    .se-pre-con {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<!-- JS and Controller -->
<script src="~/js/jquery/jquery.min.js"></script>
<script src="~/js/Application/PaymentOrderDetailsController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new PaymentOrderDetailsController();
        ctrl.init();
    });
</script>
